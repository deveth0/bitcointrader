<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="8dp"
              android:gravity="left"
              android:orientation="vertical">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="left">
    <TextView
      android:id="@+id/your_wallet_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/fg_significant"
      android:textSize="@dimen/font_size_small" />
    <TextView
      android:id="@+id/your_wallet_lastupdate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/fg_significant"
      android:gravity="right"
      android:textSize="@dimen/font_size_small" />
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="left">
    <TextView
      android:id="@+id/your_wallet_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/your_wallet_label"
      android:textColor="@color/fg_significant"
      android:layout_marginRight="8dp"
      android:textSize="@dimen/font_size_small" />
    <de.dev.eth0.bitcointrader.ui.views.CurrencyTextView
      android:id="@+id/your_wallet_btc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="16dp"
      android:textColor="@color/fg_significant"
      android:textSize="@dimen/font_size_small" />
    <de.dev.eth0.bitcointrader.ui.views.CurrencyTextView
      android:id="@+id/your_wallet_dollar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/fg_significant"
      android:textSize="@dimen/font_size_small" />
  </LinearLayout>
</LinearLayout>
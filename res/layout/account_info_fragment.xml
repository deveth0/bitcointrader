<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:gravity="left"
              android:orientation="vertical">
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/font_size_normal"
    android:textColor="@color/fg_significant"
    android:text="@string/account_info"
  />
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">
      <TextView
        android:id="@+id/your_wallet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fg_significant"
        android:textSize="@dimen/font_size_small" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/font_size_small"
          android:layout_marginRight="8dp"
          android:textColor="@color/fg_significant"
          android:text="@string/account_info_trade_fee_label"
        />
        <de.dev.eth0.bitcointrader.ui.views.AmountTextView
          android:id="@+id/your_wallet_tradefee"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/fg_significant"
          android:textSize="@dimen/font_size_small" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/font_size_small"
          android:textColor="@color/fg_significant"
          android:text="%"
        />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="1">
      <de.dev.eth0.bitcointrader.ui.views.CurrencyTextView
        android:id="@+id/your_wallet_btc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:textColor="@color/fg_significant"
        android:textSize="@dimen/font_size_small" />
      <de.dev.eth0.bitcointrader.ui.views.CurrencyTextView
        android:id="@+id/your_wallet_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fg_significant"
        android:textSize="@dimen/font_size_small" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
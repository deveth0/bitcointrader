<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal" 
              android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
>

  <TextView
    android:id="@+id/wallet_history_list_group_type"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_padding"
    android:paddingBottom="@dimen/default_padding"
    android:paddingLeft="@dimen/list_entry_padding_vertical"
    android:gravity="center_vertical"
    android:textStyle="bold"
    android:textSize="@dimen/font_size_xlarge" />

    <LinearLayout
      android:gravity="center_vertical"
      android:layout_height="match_parent"
      android:layout_width="0dp"
      android:layout_weight="2"
      android:layout_marginLeft="@dimen/list_entry_padding_vertical"
      android:orientation="vertical"
    >
      <de.dev.eth0.bitcointrader.ui.views.CurrencyTextView
        android:id="@+id/wallet_history_list_group_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
    />
    <TextView
      android:id="@+id/wallet_history_list_group_date"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    />
  </LinearLayout>
</LinearLayout>
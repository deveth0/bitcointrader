<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/action_bar_background"
	android:divider="@drawable/divider_dark"
	android:orientation="vertical"
	android:showDividers="middle" >

	<LinearLayout
      android:id="@+id/bitcointrader_actions"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:divider="@drawable/divider_dark"
		android:dividerPadding="8dp"
		android:measureWithLargestChild="true"
		android:orientation="horizontal"
		android:showDividers="middle" >

		<Button
          android:id="@+id/bitcointrader_actions_request"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableLeft="@drawable/ic_action_receive"
			android:gravity="left|center_vertical"
          android:text="request"
			android:textAllCaps="true"
			android:textColor="@android:color/white"
			android:textSize="@dimen/font_size_tiny"
			android:textStyle="bold" />

		<Button
          android:id="@+id/bitcointrader_actions_send"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableRight="@drawable/ic_action_send"
			android:gravity="right|center_vertical"
          android:text="send"
			android:textAllCaps="true"
			android:textColor="@android:color/white"
			android:textSize="@dimen/font_size_tiny"
			android:textStyle="bold" />
	</LinearLayout>
</LinearLayout>